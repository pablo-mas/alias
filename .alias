# ==========================================
# NAVIGATION & DIRECTORIES
# ==========================================
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"

# Make directory and enter it immediately
mkcd() {
    mkdir -p "$1" && cd "$1"
}

# ==========================================
# FILE OPERATIONS (Safety & Defaults)
# ==========================================
# Safety first: Confirm before overwriting/deleting
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"
alias ln="ln -i"

# Better 'ls' defaults
alias ls='ls --color=auto'
alias ll='ls -alFh'       # Long list, hidden files, human readable sizes
alias la='ls -A'          # All files except . and ..
alias l='ls -CF'          # Columnar list
alias lr='ls -tR'         # Sort by date, recursive

# ==========================================
# SYSTEM & MAINTENANCE
# ==========================================
# Disk & Memory usage
alias du="du -h"
alias df="df -h"
alias free="free -m"
# Find largest files/dirs (top 15)
alias ducks='du -cksh * | sort -hr | head -n 15'

# Package Management (Ubuntu/Debian)
alias update='sudo apt update && sudo apt upgrade -y'
alias autoremove='sudo apt autoremove -y'

# Editors & Configs
alias bashrc='antigravity ~/.bashrc'
alias zshrc="antigravity ~/.zshrc"
alias agy="antigravity"

# Utilities
alias c="clear"
alias h='history'
alias j='jobs -l'
alias please='sudo $(fc -ln -1)'  # Re-run last command with sudo
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Alert alias (Sleep 10; alert)
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# ==========================================
# NETWORKING
# ==========================================
alias myip="curl http://ipecho.net/plain; echo"  # Public IP
alias ips="hostname -I"                          # Local IP

# ==========================================
# GIT ALIASES
# ==========================================
alias gs='git status'
alias ga='git add'
alias gaa='git add .'
alias gc='git commit -m'
alias gp='git push'
alias gl='git pull'
alias glog='git log --oneline --graph --decorate --all'
alias gd='git diff'
alias gco='git checkout'
alias gb='git branch'

# ==========================================
# PYTHON & DEVELOPMENT
# ==========================================
alias pv="python --version"
alias pipu='pip install --upgrade pip'

# UV Project Commands
alias ur='uv run'                 # Run script in project env
alias us='uv sync'                # Sync env with lockfile
alias ua='uv add'                 # Add dependency
alias urm='uv remove'             # Remove dependency
alias ul='uv lock'                # Update lockfile
alias ut='uv tree'                # View dependency tree

# UV Pip Equivalents
alias uvp='uv pip'                # Base command
alias uvi='uv pip install'        # Install packages
alias uvu='uv pip install -U'     # Upgrade packages
alias uvl='uv pip list'           # List packages
alias uvs='uv pip sync'           # Sync to requirements.txt
alias uvf='uv pip freeze'         # Freeze environment

# Virtual Environment Activator
# Usage: 'activate' (defaults to .venv) or 'activate my_env_name'
activate() {
    local venv_dir="${1:-.venv}"
    if [ -f "$venv_dir/bin/activate" ]; then
        source "$venv_dir/bin/activate"
        echo "✅ Activated virtual environment: $venv_dir"
    else
        echo "❌ Error: Could not find activation script at '$venv_dir/bin/activate'"
    fi
}
alias a="activate" # Shortcut for the function above

# ==========================================
# ARCHIVE EXTRACTION
# ==========================================
extract() {
    if [ -f "$1" ] ; then
        case "$1" in
            *.tar.bz2)   tar xjf "$1"    ;;
            *.tar.gz)    tar xzf "$1"    ;;
            *.bz2)       bunzip2 "$1"    ;;
            *.rar)       unrar e "$1"    ;;
            *.gz)        gunzip "$1"     ;;
            *.tar)       tar xf "$1"     ;;
            *.tbz2)      tar xjf "$1"    ;;
            *.tgz)       tar xzf "$1"    ;;
            *.zip)       unzip "$1"      ;;
            *.Z)         uncompress "$1" ;;
            *.7z)        7z x "$1"       ;;
            *)           echo "'$1' cannot be extracted via extract()" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}

backup() {
    cp "$1" "$1.bak"
}